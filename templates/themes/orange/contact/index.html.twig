{% extends 'themes/'~app_theme~'/layouts/page-layout.html.twig' %}

{% block title %}Conception de Sites Web & Outils sur Mesure pour Snacks et Sandwicheries | snackers.be{% endblock %}
{% block meta_description %}Découvrez nos services de création de sites web sur mesure et d'outils web innovants conçus spécialement pour les snacks et sandwicheries. Boostez votre présence en ligne et simplifiez votre gestion quotidienne. Contactez-nous pour des solutions personnalisées. | Liège{% endblock %}
        {% block page_title %}
            {{ component("H1", {label: "Contact"}) }}
        {% endblock %}

{% block body %}
    <div class="flex flex-col px-3 md:px-8 lg:px-16 my-16">
        <div class="w-full md:max-w-5xl p-6">
            {{ component('H2', {
                label: "N'hésitez pas à me contacter"
            }) }}

            <div class="leading-loose font-medium py-6">
                Votre avis compte beaucoup pour moi, alors n'hésitez pas à me contacter pour toute question,
                suggestion ou demande de collaboration. Je suis toujours ravi de discuter avec vous, alors
                envoyez-moi un message, et je vous répondrai dès que possible.
            </div>
        </div>
        <div class="w-full md:max-w-5xl grid lg:grid-cols-2 mx-auto">
            <div class="p-6 flex flex-col justify-center items-center">

                {#                <figure style="background-image: url({{ asset('images/map-liege-01.webp') }})"> #}
                {#                    <img src="{{ asset('images/map-liege-01.webp') }}" alt="" class="w-full aspect-square"> #}
                {#                </figure> #}
{#            </div>#}
            <div style="background-image: url({{ asset('images/map-liege-01.webp') }})"
                 class="w-full aspect-video lg:aspect-74 bg-no-repeat bg-center bg-cover
">

            </div>
            </div>
            <div class=" w-full h-full p-6">
                <div class="border border-black/10 dark:border-darkBlack/10 rounded-lg  w-full h-full p-6">
                    <p>Pour un rensignement ou un rendez-vous, remplissez le formulaire ci-dessous ou envoyez moi
                        un {{ component('Link', { label: 'email', link:'mailto:'}) }}</p>
                    <div class="my-16 p-3">
                        {{ form_start(form) }}

                        <div class="flex flex-col mb-6">
                            {{ form_label(form.name, null, { 'label_attr': {'class': 'mb-3'} }) }}
                            {{ form_widget(form.name, { 'attr': {'class': 'w-full rounded-md leading-loose border border-black/10 text-black px-3'} }) }}
                            {{ form_errors(form.name, { 'attr': {'class': 'text-secondary leading-loose'} }) }}
                        </div>

                        <div class="flex flex-col mb-6">
                            {{ form_label(form.email, null, { 'label_attr': {'class': 'mb-3'} }) }}
                            {{ form_widget(form.email, { 'attr': {'class': 'w-full rounded-md leading-loose border border-black/10 text-black px-3'} }) }}
                            {{ form_errors(form.email, { 'attr': {'class': 'text-secondary leading-loose'} }) }}
                        </div>

                        <div class="flex flex-col mb-6">
                            {{ form_label(form.phone, null, { 'label_attr': {'class': 'mb-3'} }) }}
                            {{ form_widget(form.phone, { 'attr': {'class': 'w-full rounded-md leading-loose border border-black/10 text-black px-3'} }) }}
                            {{ form_errors(form.phone, { 'attr': {'class': 'text-secondary leading-loose'} }) }}
                        </div>

                        <div class="flex flex-col mb-6">
                            {{ form_label(form.message, null, { 'label_attr': {'class': 'mb-3'} }) }}
                            {{ form_widget(form.message, { 'attr': {'rows': '5', 'class': 'w-full h-40 rounded-md leading-loose border border-black/10 text-black px-3'} }) }}
                            {{ form_errors(form.message, { 'attr': {'class': 'text-secondary leading-loose'} }) }}
                        </div>

                        <div class="flex flex-col mb-6">
                            {{ form_widget(form.submit, {'label': 'Envoyer', 'attr': {'class': 'w-36 bg-secondary text-white dark:text-darkWhite px-6 py-2 rounded-sm'} }) }}
                        </div>

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
        <div class="my-16">
            {{ component('H2', {
                label: "Restons en contact"
            }) }}
            <div class="grid md:grid-cols-3 text-center my-16">
                <div class="flex flex-col items-center justify-center my-8 md:my-0">
                    <span class="block w-16 h-16 rounded-full  bg-red-500/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="w-9 h-9 text-black/70 dark:text-darkBlack/70">
                              <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"/>
                        </svg>
                    </span>
                    {{ component('H3', {label: "Email", class: "py-3 text-black/60 dark:text-darkBlack/60"}) }}
                    {{ company.email }}
                </div>
                <div class="flex flex-col items-center justify-center my-8 md:my-0">
                    <span class="block w-16 h-16 rounded-full bg-secondary/10 bg-secondary/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="w-9 h-9 text-black/70 dark:text-darkBlack/70">
                              <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z"/>
                        </svg>
                    </span>
                    {{ component('H3', {label: "Téléphone", class: "py-3 text-black/60 dark:!text-darkBlack/60"}) }}
                    {{ company.phone }}
                </div>
                <div class="flex flex-col items-center justify-center my-8 md:my-0">
                    <span class="block w-16 h-16 rounded-full bg-black/10 dark:bg-darkBlack/30 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                             stroke="currentColor" class="w-9 h-9 text-black/60 dark:text-darkBlack/60">
                              <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z"/>
                              <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z"/>
                        </svg>
                    </span>
                    {{ component('H3', {label: "Adresse", class: "py-3  text-black/70 dark:text-darkBlack/70"}) }}
                    <p class="text-left pl-1/5">
                        Grivegnée<br/>
                        {# {{ company.streetName }}{{ company.streetNr }} <br/>
                        {{ company.postalCode }}    {{ company.postalCity }} #}
                    </p>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

